h4
  .image
    .thumbnail.image-preview-container
      = cl_image_tag @post.image,  :crop => :fill 
    h5#image 
      span 
        ="#{t('posts.attr.title')}: #{@post.title} "
      br
      span ="#{t('posts.attr.author')}: #{@post.user.name} #{@post.user.last_name}"
h4
  strong = t('posts.attr.content')
  =< raw(@post.content)    
.btn-group.btn-group
  = link_to t('buttons.posts.edit'), edit_post_path(@post), class: 'btn btn-success'
  = link_to t('buttons.posts.back'), posts_path, class: 'btn btn-success'
= render 'comments/form'  
- if @post.comments.present?
  .container
    .row
      .col-md-12
        .page-header
          h3 = t('labels.comments')
        #comments.comments-list
          = render partial: 'comments/comment', collection: @comments                         

#infinite-scrolling
  = will_paginate @comments
  .preload.row.center
    i.fa.fa-cog.fa-spin.fa-3x.fa-fw
